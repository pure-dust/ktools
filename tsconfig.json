{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "~main/*": [
        "windows/main/*"
      ],
      "~setting/*": [
        "windows/setting/*"
      ],
      "~utils/*": [
        "utils/*"
      ],
      "~components/*": [
        "components/*"
      ],
      "~assets/*": [
        "assets/*"
      ],
      "~styles/*": [
        "styles/*"
      ]
    }
  },
  "include": [
    "windows/**/*.ts",
    "windows/**/*.tsx",
    "windows/**/*.d.ts",
    "typings/**/*.d.ts",
    "components/**/.ts",
    "components/**/.tsx",
    "components/**/.d.ts",
    "public/**.ts",
    "utils/**.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
